 <mvc:View controllerName="com.zwork.zwalkt.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <Shell>
    <App id="idAppControl" class="myAppDemoWT">
      <pages>
        <Page title="{i18n>homePageTitle}">
          <headerContent>
            <Button
              icon="sap-icon://hello-world"
              press=".onOpenDialog"/>
          </headerContent>
          <content>
            <mvc:XMLView viewName="com.zwork.zwalkt.view.HelloPanel"/>
            <mvc:XMLView viewName="com.zwork.zwalkt.view.InvoiceList"/>
          </content>
        </Page>
      </pages>
    </App>
  </Shell>
</mvc:View>