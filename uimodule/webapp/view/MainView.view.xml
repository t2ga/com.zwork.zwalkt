 <mvc:View controllerName="com.zwork.zwalkt.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl" >
    <pages>
      <Page title="{i18n>title}">
        <content>
          <FormattedText htmlText="{/HTML}"/>
          <Button
            text="{i18n>showHelloButtonText}"
            press=".onShowHello"/>
          <Input
            value="{/recipient/name}"
            description="Hello {/recipient/name}"
            valueLiveUpdate="true"
            width="60%"
            placeholder="{/recipient/placeholder}"
          />
          <FormattedText htmlText="{/recipient/name}"/>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>